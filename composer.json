{
	"name": "daimona/bot-riconferme",
	"description": "Bot per le riconferme di itwiki",
	"type": "project",
	"authors": [
		{
			"name": "Daimona",
			"homepage": "https://it.wikipedia.org/wiki/User:Daimona_Eaytoy",
			"role": "Developer"
		}
	],
	"license": "AGPL-3.0-or-later",
	"require": {
		"php": ">=7.4.0",
		"ext-json": "*",
		"psr/log": "^1.1",
		"symfony/polyfill-php80": "^1.20.0"
	},
	"suggest": {
		"ext-curl": "Faster requests"
	},
	"require-dev": {
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.3.2",
		"mediawiki/mediawiki-codesniffer": "42.0.0",
		"phan/phan": "5.4.2",
		"mediawiki/phan-taint-check-plugin": "5.0.0"
	},
	"autoload": {
		"psr-4": {
			"BotRiconferme\\": "src/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs -p -s",
			"phan --long-progress-bar --require-config-exists --color"
		],
		"fix": "phpcbf"
	}
}
